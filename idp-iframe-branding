  <!-- Floating Cart (no header/footer scenario) -->
  <button class="cart-fab" type="button" aria-label="Open cart" data-open-cart>
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <circle cx="9" cy="21" r="1"></circle>
      <circle cx="20" cy="21" r="1"></circle>
      <path d="M1 1h4l2.68 12.39a2 2 0 0 0 2 1.61h7.72a2 2 0 0 0 2-1.61L23 6H6"></path>
    </svg>
    <span>Cart</span>
    <span class="cart-count" data-cart-count>0</span>
  </button>
  <div class="cart-overlay" data-cart-overlay aria-hidden="true"></div>
  <aside class="cart-drawer" aria-label="Cart" aria-hidden="true">
    <header>
      <h3>Your Cart</h3>
      <button class="cart-close" type="button" aria-label="Close cart" data-close-cart>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </header>
    <div class="cart-body" data-cart-body>
      <div class="cart-empty" data-cart-empty>Your cart is empty. Tap “Select” on an item to add it here.</div>
    </div>
    <div class="cart-footer">
      <div class="cart-totals"><span>Estimated Total</span><span data-cart-total>$0</span></div>
      <button class="btn" type="button" aria-label="Checkout">Checkout</button>
      <button class="btn secondary" type="button" data-close-cart>Continue Browsing</button>
      <div class="fine">Demo cart UI • totals are estimated</div>
    </div>
  </aside>
</body>
  <script>
    (function(){
      // Floating cart drawer (demo)
      const openBtns = document.querySelectorAll('[data-open-cart]');
      const closeBtns = document.querySelectorAll('[data-close-cart]');
      const overlay = document.querySelector('[data-cart-overlay]');
      const cartBody = document.querySelector('[data-cart-body]');
      const cartEmpty = document.querySelector('[data-cart-empty]');
      const cartCount = document.querySelector('[data-cart-count]');
      const cartTotal = document.querySelector('[data-cart-total]');

      let cart = [];

      // Keep cart UI from overlapping header/footer (dynamic insets)
      const headerEl = document.querySelector('.site-header');
      const footerEl = document.querySelector('footer');

      function updateCartInsets(){
  // Header inset should match how much of the header is actually visible
  let headerInset = 0;
  if (headerEl) {
    const hr = headerEl.getBoundingClientRect();
    // hr.bottom is the visible height when header scrolls away (goes to 0 / negative)
    headerInset = Math.max(0, Math.min(hr.height, hr.bottom));
  }

  // Default: no footer inset unless footer is actually in view
  let footerInset = 0;
  if(footerEl){
    const r = footerEl.getBoundingClientRect();
    const vh = window.innerHeight || document.documentElement.clientHeight;
    const isVisible = r.top < vh && r.bottom > 0;
    if(isVisible){
      const overlapFromBottom = Math.max(0, vh - r.top);
      footerInset = Math.min(overlapFromBottom, r.height);
    }
  }

  document.documentElement.style.setProperty('--cart-top', headerInset + 'px');
  document.documentElement.style.setProperty('--cart-bottom', (footerInset + 10) + 'px');
}

      updateCartInsets();
      window.addEventListener('resize', updateCartInsets);
      window.addEventListener('scroll', updateCartInsets, { passive:true });

      function moneyToNumber(str){
        // Parses things like "$75–$120" or "$65" -> returns first numeric value
        const m = (str||'').replace(/,/g,'').match(/\$\s*([0-9]+(?:\.[0-9]+)?)/);
        return m ? Number(m[1]) : 0;
      }

      function formatMoney(n){
        return `$${Math.round(n).toLocaleString()}`;
      }

      function openCart(){
        updateCartInsets();
        document.body.classList.add('cart-open');
      }
      function closeCart(){
        document.body.classList.remove('cart-open');
      }

      openBtns.forEach(b=>b.addEventListener('click', openCart));
      closeBtns.forEach(b=>b.addEventListener('click', closeCart));
      overlay && overlay.addEventListener('click', closeCart);
      window.addEventListener('keydown', (e)=>{ if(e.key === 'Escape') closeCart(); });

      function renderCart(){
        if(!cartBody) return;

        // Clear existing items (keep empty node)
        cartBody.querySelectorAll('[data-cart-item]').forEach(n=>n.remove());

        const count = cart.length;
        if(cartCount) cartCount.textContent = String(count);
        if(cartEmpty) cartEmpty.style.display = count ? 'none' : 'block';

        let total = 0;
        cart.forEach((item, idx)=>{
          total += item.price;

          const row = document.createElement('div');
          row.className = 'cart-item';
          row.setAttribute('data-cart-item','');

          row.innerHTML = `
            <div class="meta">
              <div class="title">${item.title}</div>
              <div class="sub">${item.category}</div>
              <div class="price">${formatMoney(item.price)}</div>
            </div>
            <button class="remove" type="button" aria-label="Remove item">Remove</button>
          `;

          row.querySelector('.remove').addEventListener('click', ()=>{
            cart.splice(idx,1);
            renderCart();
          });

          cartBody.appendChild(row);
        });

        if(cartTotal) cartTotal.textContent = formatMoney(total);
      }

      // Add-to-cart from any button with data-add-to-cart inside a card
      document.addEventListener('click', (e)=>{
        const btn = e.target && e.target.closest && e.target.closest('[data-add-to-cart]');
        if(!btn) return;

        const card = btn.closest('.card');
        if(!card) return;

        const titleEl = card.querySelector('.title');
        const priceEl = card.querySelector('.price');
        const title = titleEl ? titleEl.textContent.trim() : 'Item';
        const priceText = priceEl ? priceEl.textContent : '';
        const price = moneyToNumber(priceText);

        // Determine category from the active tab label (best-effort)
        const activeLabel = document.querySelector('.tablist label[for="' + document.querySelector('input[name="tab"]:checked')?.id + '"]');
        const category = activeLabel ? activeLabel.textContent.trim() : 'Selection';

        cart.push({ title, price, category });
        renderCart();
        openCart();
      });

      renderCart();
      const track = document.querySelector('[data-gallery-track]');
      if(!track) return;
      const slides = Array.from(track.children);
      let index = 0;
      const prev = document.querySelector('[data-gallery-prev]');
      const next = document.querySelector('[data-gallery-next]');
      const dotsWrap = document.querySelector('[data-gallery-dots]');

      function update(){
        const x = -index * 100;
        track.style.transform = `translateX(${x}%)`;
        if(dotsWrap){
          dotsWrap.querySelectorAll('.gallery-dot').forEach((d,i)=>{
            d.classList.toggle('is-active', i===index);
          });
        }
      }
      function go(n){ index = (n + slides.length) % slides.length; update(); }

      // Build dots
      if(dotsWrap){
        slides.forEach((_,i)=>{
          const dot = document.createElement('button');
          dot.className = 'gallery-dot';
          dot.type = 'button';
          dot.setAttribute('aria-label', `Show image ${i+1}`);
          dot.addEventListener('click', ()=> go(i));
          dotsWrap.appendChild(dot);
        });
      }

      prev && prev.addEventListener('click', ()=> go(index-1));
      next && next.addEventListener('click', ()=> go(index+1));
      update();

      // Swipe support
      let startX=null;
      track.addEventListener('touchstart', (e)=>{startX=e.touches[0].clientX;}, {passive:true});
      track.addEventListener('touchmove', (e)=>{
        if(startX===null) return; const dx = e.touches[0].clientX - startX; if(Math.abs(dx)>50){
          go(index + (dx<0?1:-1)); startX=null;
        }
      }, {passive:true});

      // One-line tags with +x more
      function collapseTags(){
        const containers = document.querySelectorAll('.tags');
        containers.forEach(tags=>{
          // Remove any previous chip and unhide everything
          tags.querySelectorAll('.tag.more').forEach(m=>m.remove());
          const tagEls = Array.from(tags.querySelectorAll('.tag'));
          tagEls.forEach(t=>t.classList.remove('is-hidden'));
          if(tagEls.length===0) return;

          const firstTop = tagEls[0].offsetTop;
          let overflow = [];

          // Hide anything that wrapped to a new line initially
          for(const el of tagEls){
            if(el.offsetTop>firstTop){ el.classList.add('is-hidden'); overflow.push(el); }
          }

          // If nothing wrapped, nothing to do
          if(overflow.length===0) return;

          // Create the +x chip
          const chip = document.createElement('span');
          chip.className = 'tag more';
          chip.textContent = `+${overflow.length}`;
          tags.appendChild(chip);

          // Ensure the chip itself sits on the first line. If it wraps, hide last visible tags until it fits.
          // Build list of currently visible (non-hidden, non-chip) tags from right-to-left
          const visibles = Array.from(tags.querySelectorAll('.tag'))
            .filter(el=>!el.classList.contains('is-hidden') && !el.classList.contains('more'));

          // While the chip is on the second line, hide the last visible tag and increment the count
          while(chip.offsetTop>firstTop && visibles.length){
            const last = visibles.pop();
            last.classList.add('is-hidden');
            overflow.push(last);
            chip.textContent = `+${overflow.length}`;
          }
        });
      }
      // Run on load and on resize (debounced)
      collapseTags();
      let _rz;
      window.addEventListener('resize', ()=>{ clearTimeout(_rz); _rz = setTimeout(collapseTags, 150); });
    })();
  </script>
</html>
